package yunsp;

public class Yunspham {
	
	public void mode() {   //배열에서 최빈값 찾기
		int[] arr = {0,1,1,2,3,3,3,4,1};
		
		int ans = 0;
		int arrMax =0;
		int cntMax =0;
		
		for(int i=0; i<arr.length; i++) {
			if(arrMax < arr[i]) {
				arrMax = arr[i];
			}
		}
		
		int[] copyarr = new int[arrMax +1];
		
		for(int i=0; i<arr.length; i++) {
			copyarr[arr[i]]++;
		}
		
		for(int i=0; i<copyarr.length; i++) {
			if(cntMax < copyarr[i]) {
				cntMax = copyarr[i];
				ans = i;
			}
		}
		
		
		System.out.println(ans);
	}

}
